## Run Master in MiniShift docker daemon
export NO_DNS=true
# Be sure add an entry in /etc/hosts for CONJUR_MASTER_HOST_NAME
export CONJUR_MASTER_HOST_NAME=conjur-master
export CONJUR_MASTER_HOST_IP=$(minishift ip)
export CONJUR_MASTER_PORT=30443
export CONJUR_MASTER_PGSYNC_PORT=5432
export CONJUR_MASTER_PGAUDIT_PORT=5433
# use docker daemon in minishift instead of local
eval $(minishift docker-env)
