## Run Master cluster in Localhost docker daemon
export NO_DNS=true
# If no DNS, be sure add an entry in /etc/hosts for CONJUR_MASTER_HOST_NAME
export CONJUR_MASTER_HOST_NAME=conjur_master
export CONJUR_MASTER_HOST_IP=$(ifconfig ens33 | grep "inet " | awk '{print $2}')
export CONJUR_MASTER_PORT=443
export CONJUR_MASTER_PGSYNC_PORT=5432
export CONJUR_MASTER_PGAUDIT_PORT=5433
############################################################

# CONJUR_MASTER_HOST is used to initialize CLI connections
export CONJUR_MASTER_HOST=$CONJUR_MASTER_HOST_NAME:$CONJUR_MASTER_PORT
## Cert altnames for Conjur node-to-node TLS authentication
export MASTER_ALTNAMES="localhost,$CONJUR_MASTER_HOSTNAME"
export FOLLOWER_ALTNAMES="conjur-follower,conjur-follower.$CONJUR_PROJECT_NAME.svc.cluster.local"

