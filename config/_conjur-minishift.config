# if CONNECTED is false, scripts assume no internet connectivity
export CONNECTED=true

############################################################
# Don't change the CONJUR_APPLIANCE_IMAGE value - scripts depend on it
############################################################
export CONJUR_APPLIANCE_IMAGE=conjur-appliance:4.9-stable
export CONJUR_VERSION=4
export CONJUR_ACCOUNT=dev
export CONJUR_ADMIN_PASSWORD=Cyberark1
export CONJUR_MASTER_CONTAINER_NAME=conjur1
export CONJUR_STANDBY1_NAME=conjur2
export CONJUR_STANDBY2_NAME=conjur3
export CLI_CONTAINER_NAME=conjur-cli
export CLI_IMAGE_NAME=cyberark/conjur-cli:4-latest
